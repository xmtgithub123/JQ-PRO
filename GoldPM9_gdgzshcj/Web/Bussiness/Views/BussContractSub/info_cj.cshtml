               width = "98%",
               ids = Model.ConSubType.ToString()
           })
            </td>

            <th width="10%">签订状态</th>
            <td width="40%">
                @BaseData.getBase(new Params()
           {
               controlName = "ConSubStatus",
               isRequired = true,
               engName = "ConSubStatus",
               width = "98%",
               ids = Model.ConSubStatus.ToString()
