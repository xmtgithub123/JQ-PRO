                JQFields: ["Id"],//追加的字段名
                url: '@Url.Action("subfactjson", "HZShow", new { @area = "Bussiness" })',//请求的地址
                checkOnSelect: true,//是否包含check
                toolbar: '#BussSubFactPanel',//工具栏的容器ID
