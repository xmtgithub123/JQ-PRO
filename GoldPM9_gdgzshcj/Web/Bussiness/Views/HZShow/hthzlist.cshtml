            $("#JQSearchFact").textbox({
                buttonText: '筛选',
                buttonIcon: 'fa fa-search',
                height: 25,
                prompt: '合同名称、编号',
                onClickButton: function () {
                    JQ.datagrid.searchGrid({
                        dgID: 'BussFactGrid',
                        loadingType: 'datagrid',
                        queryParams: null
                    });
                }
            });

            var paramesFact = {
                JQButtonTypes: ['export'],//需要显示的按钮
                JQPrimaryID: 'Id',//主键的字段
                JQID: 'BussFactGrid',//数据表格ID
                JQWidth: '1024',//弹出窗体宽
