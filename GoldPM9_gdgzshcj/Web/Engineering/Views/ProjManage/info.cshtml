@using (Html.BeginForm("save", "ProjManage", FormMethod.Post, new { @area = "Engineering", @id = "ProjManageForm" }))
{
    @Html.HiddenFor(m => m.Id)
    <table class="table table-bordered">
        <tr>
            <th width="10%">
                项目名称
