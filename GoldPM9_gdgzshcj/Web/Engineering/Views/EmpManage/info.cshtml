</script>

@using (Html.BeginForm("save", "EmpManage", FormMethod.Post, new { @area = "Engineering", @id = "EmpManageForm" }))
{
    @Html.HiddenFor(m => m.Id)
    <table class="table table-bordered">
        <tr>
            <th>项目名称</th>
